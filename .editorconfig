# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# TS/JS
[*.{ts,js}]
indent_size = 2

# JSON
[*.json]
indent_style = tab

# MD
[*.md]
indent_size = 4

# YAML
[*.{yaml,yml}]
indent_size = 2

# package.json
[package.json]
indent_size = 2

# SQL
[*.sql]
indent_style = tab
indent_size = 2

# .htaccess
[{_.htaccess,.htaccess}]
indent_style = tab
